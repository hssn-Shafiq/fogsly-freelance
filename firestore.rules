rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.role == 'admin';
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      allow read: if isAdmin(); // Admins can read user data
    }
    
    // User profiles collection - users can read/write their own profiles
    match /userProfile/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      allow read: if isAdmin(); // Admins can read user profiles
    }
    
    // Custom themes collection - read for authenticated users, write for admins only
    match /customThemes/{themeId} {
      allow read: if isAuthenticated(); // All authenticated users can read themes
      allow write: if isAdmin(); // Only admins can create/update/delete themes
    }
    
    // Admin-specific collections (if any) - admin only access
    match /adminUsers/{adminId} {
      allow read, write: if isAdmin();
    }
    
    // Public collections (if any) - readable by all
    match /publicData/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Ads collection - users can read active ads, admins can manage all
    match /ads/{adId} {
      allow read: if isAuthenticated() && resource.data.isActive == true && resource.data.isPaused == false;
      allow read, write: if isAdmin();
    }
    
    // User ad interactions - users can only access their own data
    match /userAdInteractions/{interactionId} {
      allow read, write: if isAuthenticated() && isOwner(resource.data.userId);
      allow read: if isAdmin(); // Admins can read all interactions
    }
    
    // User ad stats - users can only access their own stats
    match /userAdStats/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      allow read: if isAdmin(); // Admins can read all stats
    }
    
    // User daily activities - users can only access their own activities
    match /userDailyActivities/{activityId} {
      allow read, write: if isAuthenticated() && isOwner(resource.data.userId);
      allow read: if isAdmin(); // Admins can read all activities
    }
    
    // FOG coin settings - read by all authenticated users, write by admins only
    match /fogCoinSettings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Default rule - deny all access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
